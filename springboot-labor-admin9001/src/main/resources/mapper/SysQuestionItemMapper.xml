<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaozhang.springboot.mapper.SysQuestionItemMapper">

    <resultMap id="BaseMap" type="com.xiaozhang.springboot.domain.SysQuestionItem">
        <id property="id" column="id"/>
        <result property="des" column="des"/>
        <result property="questionId" column="question_id"/>
        <result property="content" column="content"/>
    </resultMap>

    <select id="selectItem" resultMap="BaseMap">
        select *
        from sys_question_item
        where question_id=#{id}
    </select>
</mapper>
